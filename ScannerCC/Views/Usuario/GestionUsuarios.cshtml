@model ScannerCC.Models.Usuarios

@{
    Layout = null;
}

<style>
    input.acc {
        background-color: #BF6565;
        width: 30%;
        color: white; /* Color del texto */
        padding: 5px; /* Espaciado interno */
        border-radius: 5px; /* Bordes redondeados (opcional) */
        font-family: Arial;
        border: none;
        margin-bottom: 5px;
    }

    button.btn {
        background-color: black;
        width: 30%;
        color: white; /* Color del texto */
        padding: 5px; /* Espaciado interno */
        border-radius: 5px; /* Bordes redondeados (opcional) */
        font-family: Arial;
        border: none;
    }
</style>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Extras/favicon.png" type="image/x-icon">
    <title>QS - Gestión usuarios</title>
    <link rel="stylesheet" href="~/css/GestionUsuario.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="nav-i">
            <a href="@Url.Action("RedirigirSegunRol", "Home")">
                <img class="logoqs" src="~/Extras/QualityScoutLogo.png" alt="Logo de Quality Scout">
            </a>
            <div class="navstyle">
                <div class="iconosnav">
                    <a asp-action="Index" asp-controller="Especialista">
                        <img src="~/Extras/home.png" alt="Inicio" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionUsuarios" asp-controller="Usuario">
                        <img src="~/Extras/usuarios.png" alt="Usuarios" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="Controles" asp-controller="Controles">
                        <img src="~/Extras/controles.png" alt="Controles" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionProductos" asp-controller="Producto">
                        <img src="~/Extras/productos.png" alt="Productos" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionInformes" asp-controller="Informes">
                        <img src="~/Extras/Informes.png" alt="Informes" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionEscaneos" asp-controller="Escaneos">
                        <img src="~/Extras/escaner.png" alt="Informes" />
                    </a>
                </div>
            </div>
            <div class="login-btn">
                <div class="div2">
                    <img class="icono-lapiz" src="~/Extras/especialista.png" alt="Especialista">
                    <div class="welcome-container">
                        <span class="welcome-text">Bienvenido!</span>
                        <p style="font-size:12px;">@GetFirstNameAndSurnameB(ViewBag.trab.Nombre)</p>

                        @functions {
                            public string GetFirstNameAndSurnameB(string fullName)
                            {
                                if (string.IsNullOrEmpty(fullName))
                                {
                                    return string.Empty;
                                }

                                var nameParts = fullName.Split(' ');

                                if (nameParts.Length >= 2)
                                {
                                    return nameParts[0] + " " + nameParts[2]; 
                                }

                                return nameParts[0]; 
                            }
                        }

                        <p style ="font-size:12px;">Especialista</p>
                    </div>
                </div>
                <button id="showOptionUser" onclick="showOptionUser()">
                    <i class="fa-solid fa-caret-down"></i>
                </button>
                <div id="opcionesUser" style="display: none">
                    <ul>
                        <li>
                            <a style="color:white;" asp-action="Details" asp-controller="Usuario" asp-route-id="@ViewBag.trab.Id">
                                Editar usuario
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Auth" asp-action="LogOut" class="dropdown-item" style="color:red; text-decoration:none;">
                                Cerrar sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="content">
        <div class="content">
            <h2 class="accesotitulo">Gestión de usuarios</h2>
        </div>
    </div>

    <main>
        <div class="search-add-container">
            <form asp-action="GestionUsuarios" method="get" class="search-b" style="display:inline; margin-left: 328px;">
                <input type="text" placeholder="🔍 Busca por rut o nombre" class="search-bar" name="Busqueda" />
            </form>
            <a class="add-user-btn" href="@Url.Action("Create", "Usuario")"><strong>+</strong> Añadir usuario</a>
        </div>

        <section class="user-list">
            <h2 class="titulo">Registros</h2>

            <!-- Sección de usuarios en estilo de tarjeta -->
            @if (ViewBag.Usuario != null && ViewBag.Usuario.Count > 0)
            {
                @foreach (var item in ViewBag.Usuarios)
                {
                    <div class="user-card">
                        <div class="user-info">
                            <img src="~/Extras/iconUsuario.png" class="user-icon" />
                            <div>
                                <p><strong>@GetFirstNameAndSurname(item.Nombre)</strong></p>

                        @functions {
                            public string GetFirstNameAndSurname(string fullName)
                            {
                                if (string.IsNullOrEmpty(fullName))
                                {
                                    return string.Empty;
                                }

                                var nameParts = fullName.Split(' ');

                                if (nameParts.Length >= 2)
                                {
                                    return nameParts[0] + " " + nameParts[2]; 
                                }

                                return nameParts[0]; 
                            }
                        }

                                <p>RUT: @item.Rut</p>
                            </div>
                        </div>
                        <div class="user-details">
                            <p><strong>Rol: @item.Rol.Nombre</strong></p>
                            <p>Correo: @item.Email</p>
                        </div>
                        <div class="user-actions">
                            @if (item.Activo)
                            {
                                <a class="edit-btn" href="@Url.Action("Edit", "Usuario", new { id = item.Id })">
                                    <i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i>
                                </a>
                                <a class="see-btn" href="@Url.Action("Details", "Usuario", new { id = item.Id })">
                                    <i class="fa-solid fa-chevron-right" style="color: #ffffff;"></i>
                                </a>
                            }
                            else
                            {

                                <a class="see-btn" href="@Url.Action("Details", "Usuario", new { id = item.Id })">
                                    <i class="fa-solid fa-chevron-right" style="color: #ffffff;"></i>
                                </a>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <p style="text-align: center;">No hay usuarios para mostrar</p>
            }
        </section>
    </main>
    <iframe id="iframeId"
            src="https://www.stack-ai.com/embed/f4e0d66c-8812-4db0-9270-b3eaaeee09e5/f9dd681e-90cd-4c15-b0a6-c40c70bd9f57/6747bfc6ae163a26df8eb677"
            width="350"
            height="600"
            frameborder="0"
            style="position: fixed; z-index: 1; bottom: 15px; right: 15px;"></iframe>



    <script>
        function handleMessage(event) {
          if (event.data.type === 'chatbotStateChange') {
            const iframe = document.getElementById('iframeId')
            if (iframe) {
              if (event.data.isClosed) {
                iframe.style.width = '100px'
                iframe.style.height = '100px'
                iframe.style.display = 'flex'
                iframe.style.justifyContent = 'center'
                iframe.style.alignContent = 'center'
              } else {
                iframe.style.width = '350px'
                iframe.style.height = '650px'
              }
            }
          }
        }

        // Attach event listener
        window.addEventListener('message', handleMessage)

        // If you want to clean up the event listener when the page unloads (optional)
        window.addEventListener('beforeunload', function () {
          window.removeEventListener('message', handleMessage)
        })
    </script>
</body>
<script src="~/js/quagga.min.js"></script>
<script src="~/js/especialista.js"></script>

</html>