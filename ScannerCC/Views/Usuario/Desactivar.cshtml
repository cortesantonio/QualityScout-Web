@model ScannerCC.Models.Usuarios

@{
    ViewData["Title"] = "Desactivar Usuario";
}

<style>
    body {
        background-color: #242424;
        color: white;
        position: relative;
    }

    .container {
        text-align: center;
    }

    h4 {
        margin-top: 20px;
    }

    .alert-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.8); 
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000; 
    }

    .alert-box {
        background-color: #343a40; 
        padding: 20px;
        border-radius: 8px;
        text-align: center;
    }

    input[type="submit"] {
        background-color: red;
        color: white;
        margin: 5px; 
    }

    .btn-danger:hover {
        background-color: darkred;
        border-color: red;
    }

    a {
        color: white;
    }

        a:hover {
            color: #62EBF0;
        }

    .user-info {
        position: relative;
        z-index: 1; 
    }
</style>

<h1>Desactivar Usuario</h1>

<div class="user-info">
    <h3>Datos del Usuario</h3>
    <div>
        <h4>Usuario</h4>
        <hr />
        <dl class="row justify-content-center">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Rut)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Rut)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
    </div>
</div>

<div class="alert-overlay">
    <div class="alert-box">
        <h3>ALERTA</h3>
        <p>¿Está seguro que desea desactivar este usuario?</p>
        <form asp-action="Desactivar">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Aceptar" class="btn btn-danger" />
        </form>
        <button onclick="window.location.href='@Url.Action("Index", "Home")'" class="btn btn-secondary">Cancelar</button>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Volver a la lista</a>
</div>


