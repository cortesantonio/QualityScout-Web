    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        color: #4B0404; /* Cambia este valor por el color que desees */
        font-family: Arial;
        border: none;
        padding: 5px;
    }

    input {
        color: black; /* Color del texto */
        background-color: #DBD7D7; /* Color de fondo */
        padding: 5px; /* Espaciado interno */
        border-radius: 5px; /* Bordes redondeados (opcional) */
        font-family: Arial;
        font-size: 12px;
        border: none;
    }

    select {
        color: black; /* Color del texto */
        background-color: #DBD7D7; /* Color de fondo */
        padding: 5px; /* Espaciado interno */
        border-radius: 5px; /* Bordes redondeados (opcional) */
        font-family: Arial;
        border: none;
    }

    button {
        color: black; /* Color del texto */
        padding: 5px; /* Espaciado interno */
        border-radius: 5px; /* Bordes redondeados (opcional) */
        font-family: Arial;
        border: none;
    }

    input, select {
        width: 100%;
        margin: 5px;
    }

    button[type="submit"] {
        background-color: #BF6565;
        color: white;
        width: 30%;
    }

        button[type="submit"]:hover {
            background-color: #F25757;
            color: white;
            width: 30%;
        }

    a {
