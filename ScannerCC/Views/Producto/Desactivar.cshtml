@model ScannerCC.Models.Productos

@{
    ViewData["Title"] = "Desactivar Producto";
}

<style>
    body {
        background-color: #242424;
        color: white;
        position: relative;
    }

    .container {
        text-align: center;
    }

    h4 {
        margin-top: 20px;
    }

    .alert-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.8); /* Fondo oscuro semi-transparente */
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000; /* Asegúrate de que esté por encima del resto del contenido */
    }

    .alert-box {
        background-color: #343a40; /* Fondo del cuadro de alerta */
        padding: 20px;
        border-radius: 8px;
        text-align: center;
    }

    input[type="submit"] {
        background-color: red;
        color: white;
        margin: 5px; /* Ajustar márgenes para los botones */
    }

    .btn-danger:hover {
        background-color: darkred;
        border-color: red;
    }

    a {
        color: white;
    }

        a:hover {
            color: #62EBF0;
        }

    /* Estilo para el contenedor de los datos del producto */
    .product-info {
        position: relative;
        z-index: 1; /* Asegura que los datos del producto estén por encima de cualquier fondo */
    }
</style>

<h1>Desactivar Producto</h1>

<div class="product-info">
    <h3>Datos del Producto</h3>
    <div>
        <h4>Producto</h4>
        <hr />
        <dl class="row justify-content-center">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.CodigoBarra)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.CodigoBarra)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.CodigoVE)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.CodigoVE)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.PaisDestino)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.PaisDestino)
            </dd>
        </dl>
    </div>
</div>

<!-- Superposición de advertencia -->
<div class="alert-overlay">
    <div class="alert-box">
        <h3>ALERTA</h3>
        <p>¿Está seguro que desea desactivar este producto?</p>
        <form asp-action="Desactivar">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Aceptar" class="btn btn-danger" />
        </form>
        <button onclick="window.location.href='@Url.Action("Index", "Home")'" class="btn btn-secondary">Cancelar</button>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Volver a la lista</a>
</div>


