@model ScannerCC.Models.ProductoDetalles

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-color: #242424;
        color: white;
    }

    .container {
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    input, select {
        width: 100%;
        margin: 5px;
    }

        input[type="submit"] {
            background-color: #20777A;
            color: white;
        }

    .btn-dark:hover {
        background-color: #62EBF0;
        border-color: #20777A;
        color: black;
    }

    a {
        color: white;
    }

        a:hover {
            color: #62EBF0;
        }
</style>

<h1>Crear</h1>

<h4>Producto detalles</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="IdProductos" class="control-label">Productos</label>
                        <select asp-for="IdProductos" class="form-control" asp-items="ViewBag.IdProductos">
                            <option value="">Seleccione un producto</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdBotellaDetalles" class="control-label">Botella detalles</label>
                        <select asp-for="IdBotellaDetalles" class="form-control" asp-items="ViewBag.IdBotellaDetalles">
                            <option value="">Seleccione una botella</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="ColorBotella">Color de botella</label>
                        <select name="ColorBotella" id="ColorBotella" class="form-control">
                            <option value="">Seleccione un color de botella</option>
                            <option value="Incoloro">Incoloro</option>
                            <option value="Ámbar">Ámbar</option>
                            <option value="Blanca">Blanca</option>
                            <option value="Verde">Verde</option>
                            <option value="Roja">Roja</option>
                            <option value="Negra">Negra</option>
                            <option value="Gris">Gris</option>
                            <option value="Marrón">Marrón</option>
                            <option value="Azul">Azul</option>
                            <option value="Translúcida">Translúcida</option>
                            <option value="Oliva">Oliva</option>
                            <option value="Cobre">Cobre</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Capacidad" class="control-label">Capacidad</label>
                        <input asp-for="Capacidad" class="form-control" />
                        <span asp-validation-for="Capacidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="TipoCapsula">Tipo de cápsula</label>
                        <select name="TipoCapsula" id="TipoCapsula" class="form-control">
                            <option value="">Seleccione un tipo de cápsula</option>
                            <option value="Aluminio">Aluminio</option>
                            <option value="PVC">PVC</option>
                            <option value="Corcho">Corcho</option>
                            <option value="Cera">Cera</option>
                            <option value="Polipropileno">Polipropileno</option>
                            <option value="Papel">Papel</option>
                            <option value="Impresa">Impresa</option>
                            <option value="Estaño">Estaño</option>
                            <option value="Retráctil">Retráctil</option>
                            <option value="Seguridad">Seguridad</option>
                            <option value="Relieve">Relieve</option>
                            <option value="Poliéster">Poliéster</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="ColorCapsula">Color de cápsula</label>
                        <select name="ColorCapsula" id="ColorCapsula" class="form-control">
                            <option value="">Seleccione un color de cápsula</option>
                            <option value="Plateado">Plateado</option>
                            <option value="Blanco">Blanco</option>
                            <option value="Dorado">Dorado</option>
                            <option value="Verde">Verde</option>
                            <option value="Rojo">Rojo</option>
                            <option value="Negro">Negro</option>
                            <option value="Gris">Gris</option>
                            <option value="Morado">Morado</option>
                            <option value="Azul">Azul</option>
                            <option value="Naranja">Naranja</option>
                            <option value="Bordeaux">Bordeaux</option>
                            <option value="Translúcido">Translúcido</option>
                        </select>
                    </div>
                    <div class="form-group form-check d-flex justify-content-center align-items-center">
                        <input asp-for="Medalla" class="form-check-input" type="checkbox" />
                        <label asp-for="Medalla" class="form-check-label ms-2">Medalla</label>
                        <span asp-validation-for="Medalla" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="TipoEtiqueta">Tipo de etiqueta</label>
                        <select name="TipoEtiqueta" id="TipoEtiqueta" class="form-control">
                            <option value="">Seleccione un tipo de etiqueta</option>
                            <option value="Papel">Papel</option>
                            <option value="Plástico">Plástico</option>
                            <option value="Metal">Metal</option>
                            <option value="Autoadhesiva">Autoadhesiva</option>
                            <option value="Relieve">Relieve</option>
                            <option value="Vinilo">Vinilo</option>
                            <option value="Ecológica">Ecológica</option>
                            <option value="Seda">Seda</option>
                            <option value="Papel kraft">Papel kraft</option>
                            <option value="Holográfica">Holográfica</option>
                            <option value="Cerámica">Cerámica</option>
                            <option value="Cartón">Cartón</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="TipoCorcho">Tipo de corcho</label>
                        <select name="TipoCorcho" id="TipoCorcho" class="form-control">
                            <option value="">Seleccione un tipo de corcho</option>
                            <option value="Natural">Natural</option>
                            <option value="Sintético">Sintético</option>
                            <option value="Aglomerado">Aglomerado</option>
                            <option value="Cono">Cono</option>
                            <option value="Barrica">Barrica</option>
                            <option value="Microperforado">Microperforado</option>
                            <option value="Color">Color</option>
                            <option value="Ecológico">Ecológico</option>
                            <option value="Silicona">Silicona</option>
                            <option value="Espuma">Espuma</option>
                            <option value="Cava">Cava</option>
                            <option value="Híbrido">Híbrido</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MedidaEtiquetaABoquete" class="control-label">Medida de etiqueta a boquete</label>
                        <input asp-for="MedidaEtiquetaABoquete" class="form-control" />
                        <span asp-validation-for="MedidaEtiquetaABoquete" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MedidaEtiquetaABase" class="control-label">Medida de etiqueta a base</label>
                        <input asp-for="MedidaEtiquetaABase" class="form-control" />
                        <span asp-validation-for="MedidaEtiquetaABase" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-dark" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
