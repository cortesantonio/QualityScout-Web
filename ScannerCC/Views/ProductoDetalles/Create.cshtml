@model ScannerCC.Models.ProductoDetalles

@{
    Layout = null;
}

<style>
    .container {
        position: relative;
        z-index: 1; /* Asegura que el contenido esté por encima de las imágenes de fondo */
        max-width: 500px; /* Ajusta el ancho máximo que desees */
        margin: auto; /* Centra el contenedor en la pantalla */
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-groupp {
        display: flex;
        justify-content: flex-end;
        width: 100%;
    }


    label {
        color: #4B0404; /* Cambia este valor por el color que desees */
        font-family: Arial;
        border: none;
        padding: 5px;
    }

    input {
        color: black; /* Color del texto */
        background-color: #DBD7D7; /* Color de fondo */
        padding: 5px; /* Espaciado interno */
        border-radius: 5px; /* Bordes redondeados (opcional) */
        font-family: Arial;
        border: none;
    }

    select {
        color: black; /* Color del texto */
        background-color: #DBD7D7; /* Color de fondo */
        padding: 5px; /* Espaciado interno */
        border-radius: 5px; /* Bordes redondeados (opcional) */
        font-family: Arial;
        border: none;
    }

    button {
        color: black; /* Color del texto */
        padding: 5px; /* Espaciado interno */
        border-radius: 5px; /* Bordes redondeados (opcional) */
        font-family: Arial;
        border: none;
    }

    input, select {
        width: 100%;
        margin: 5px;
    }

    label.med {
        margin-right: 30px;
    }

    button[type="submit"] {
        background-color: #BF6565;
        color: white;
        width: 100%; /* Se asegura que el botón sea del mismo ancho que los inputs */
        max-width: 200px;
    }

        button[type="submit"]:hover {
            background-color: #F25757;
            color: white;
            width: 100%; /* Se asegura que el botón sea del mismo ancho que los inputs */
            max-width: 200px;
        }

    a {
        color: white;
    }

        a:hover {
            color: #62EBF0;
        }

    .titulos {
        font-family: Arial;
        font-size: 10px;
        padding-left: 5px;
    }

    .form-check-input[type="radio"] {
        display: none; /* Oculta el radio button original */
    }

    .radio-circle {
        display: inline-block;
        width: 10px;
        height: 10px;
        border: 5px solid #260202;
        border-radius: 50%;
        margin-right: 5px;
        cursor: pointer;
    }

    .form-check-input[type="radio"]:checked + .radio-circle {
        background-color: #ff6666; /* Color de fondo cuando está seleccionado */
    }

    .option-text {
        color: #260202;
        margin-right: 5px;
    }

    .form-grouppp {
        display: flex;
        font-family: Arial;
        margin-bottom: 15px;
    }
</style>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QualityScoutNoLog</title>
    <link rel="stylesheet" href="~/css/Nav.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="nav-i">
            <a href="">
                <img class="logoqs" src="~/Extras/QualityScoutLogo.png" alt="Logo Quality Scout">
            </a>
            <div class="navstyle">
                <div class="iconosnav">
                    <a asp-action="Index" asp-controller="Especialista">
                        <img src="~/Extras/home.png" alt="Inicio" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionUsuarios" asp-controller="Usuario">
                        <img src="~/Extras/usuarios.png" alt="Usuarios" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="Controles" asp-controller="Controles">
                        <img src="~/Extras/controles.png" alt="Controles" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionProductos" asp-controller="Producto">
                        <img src="~/Extras/productos.png" alt="Productos" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionInformes" asp-controller="Informes">
                        <img src="~/Extras/Informes.png" alt="Informes" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionEscaneos" asp-controller="Escaneos">
                        <img src="~/Extras/escaner.png" alt="Informes" />
                    </a>
                </div>
            </div>
            <div class="login-btn">
                <div class="div2">
                    <img class="icono-lapiz" src="~/Extras/especialista.png" alt="Especialista">
                    <div class="welcome-container">
                        <span class="welcome-text">Bienvenido!</span>
                        <p>@ViewBag.trab.Nombre</p>
                        <p>Especialista</p>
                    </div>
                </div>
                <button id="showOptionUser" onclick="showOptionUser()">
                    <i class="fa-solid fa-caret-down"></i>
                </button>
                <div id="opcionesUser" style="display: none">
                    <ul>
                        <li>
                            <a style="color:white;" asp-action="Details" asp-controller="Usuario" asp-route-id="@ViewBag.trab.Id">
                                Editar usuario
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Auth" asp-action="LogOut" class="dropdown-item" style="color:red; text-decoration:none;">
                                Cerrar sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="content">
        <div class="content">
            <h2 class="accesotitulo">Añadir producto detalle</h2>
        </div>
    </div>
    <div class="container">
<div class="row justify-content-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                    <div class="form-group">
                        <label asp-for="IdProductos" class="control-label">Productos</label>
                        <select asp-for="IdProductos" class="form-control" asp-items="ViewBag.IdProductos">
                            <option value="">Seleccione un producto</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdBotellaDetalles" class="control-label">Botella detalles</label>
                        <select asp-for="IdBotellaDetalles" class="form-control" asp-items="ViewBag.IdBotellaDetalles">
                            <option value="">Seleccione una botella</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="ColorBotella">Color de botella</label>
                        <select name="ColorBotella" id="ColorBotella" class="form-control">
                            <option value="">Seleccione un color de botella</option>
                            <option value="Incoloro">Incoloro</option>
                            <option value="Ámbar">Ámbar</option>
                            <option value="Blanca">Blanca</option>
                            <option value="Verde">Verde</option>
                            <option value="Roja">Roja</option>
                            <option value="Negra">Negra</option>
                            <option value="Gris">Gris</option>
                            <option value="Marrón">Marrón</option>
                            <option value="Azul">Azul</option>
                            <option value="Translúcida">Translúcida</option>
                            <option value="Oliva">Oliva</option>
                            <option value="Cobre">Cobre</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Capacidad" class="control-label">Capacidad</label>
                        <input asp-for="Capacidad" class="form-control" />
                        <span asp-validation-for="Capacidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="TipoCapsula">Tipo de cápsula</label>
                        <select name="TipoCapsula" id="TipoCapsula" class="form-control">
                            <option value="">Seleccione un tipo de cápsula</option>
                            <option value="Aluminio">Aluminio</option>
                            <option value="PVC">PVC</option>
                            <option value="Corcho">Corcho</option>
                            <option value="Cera">Cera</option>
                            <option value="Polipropileno">Polipropileno</option>
                            <option value="Papel">Papel</option>
                            <option value="Impresa">Impresa</option>
                            <option value="Estaño">Estaño</option>
                            <option value="Retráctil">Retráctil</option>
                            <option value="Seguridad">Seguridad</option>
                            <option value="Relieve">Relieve</option>
                            <option value="Poliéster">Poliéster</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="ColorCapsula">Color de cápsula</label>
                        <select name="ColorCapsula" id="ColorCapsula" class="form-control">
                            <option value="">Seleccione un color de cápsula</option>
                            <option value="Plateado">Plateado</option>
                            <option value="Blanco">Blanco</option>
                            <option value="Dorado">Dorado</option>
                            <option value="Verde">Verde</option>
                            <option value="Rojo">Rojo</option>
                            <option value="Negro">Negro</option>
                            <option value="Gris">Gris</option>
                            <option value="Morado">Morado</option>
                            <option value="Azul">Azul</option>
                            <option value="Naranja">Naranja</option>
                            <option value="Bordeaux">Bordeaux</option>
                            <option value="Translúcido">Translúcido</option>
                        </select>
                    </div>
                    <div class="form-grouppp d-flex justify-content-center align-items-center">
                        <label class="med me-3">Medalla</label>
                        <div class="form-check form-check-inline">
                            <input asp-for="Medalla" class="form-check-input" type="radio" name="Medalla" value="Sí" id="medallaSi" />
                            <label class="form-check-label radio-circle" for="medallaSi"></label>
                            <span class="option-text">Sí</span>
                        </div>
                        <div class="form-check form-check-inline" style="margin-left:10px;">
                            <input asp-for="Medalla" class="form-check-input" type="radio" name="Medalla" value="No" id="medallaNo" />
                            <label class="form-check-label radio-circle" for="medallaNo"></label>
                            <span class="option-text">No</span>
                        </div>
                        <span asp-validation-for="Medalla" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="TipoEtiqueta">Tipo de etiqueta</label>
                        <select name="TipoEtiqueta" id="TipoEtiqueta" class="form-control">
                            <option value="">Seleccione un tipo de etiqueta</option>
                            <option value="Papel">Papel</option>
                            <option value="Plástico">Plástico</option>
                            <option value="Metal">Metal</option>
                            <option value="Autoadhesiva">Autoadhesiva</option>
                            <option value="Relieve">Relieve</option>
                            <option value="Vinilo">Vinilo</option>
                            <option value="Ecológica">Ecológica</option>
                            <option value="Seda">Seda</option>
                            <option value="Papel kraft">Papel kraft</option>
                            <option value="Holográfica">Holográfica</option>
                            <option value="Cerámica">Cerámica</option>
                            <option value="Cartón">Cartón</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="TipoCorcho">Tipo de corcho</label>
                        <select name="TipoCorcho" id="TipoCorcho" class="form-control">
                            <option value="">Seleccione un tipo de corcho</option>
                            <option value="Natural">Natural</option>
                            <option value="Sintético">Sintético</option>
                            <option value="Aglomerado">Aglomerado</option>
                            <option value="Cono">Cono</option>
                            <option value="Barrica">Barrica</option>
                            <option value="Microperforado">Microperforado</option>
                            <option value="Color">Color</option>
                            <option value="Ecológico">Ecológico</option>
                            <option value="Silicona">Silicona</option>
                            <option value="Espuma">Espuma</option>
                            <option value="Cava">Cava</option>
                            <option value="Híbrido">Híbrido</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MedidaEtiquetaABoquete" class="control-label">Medida de etiqueta a boquete</label>
                        <input asp-for="MedidaEtiquetaABoquete" class="form-control" />
                        <span asp-validation-for="MedidaEtiquetaABoquete" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MedidaEtiquetaABase" class="control-label">Medida de etiqueta a base</label>
                        <input asp-for="MedidaEtiquetaABase" class="form-control" />
                        <span asp-validation-for="MedidaEtiquetaABase" class="text-danger"></span>
                    </div>
                    <div class="form-groupp">
                        <button type="submit" class="btnAccionForm" style="margin-bottom: 20px;">
                            <i class="fa-solid fa-wine-bottle"></i> Agregar producto detalle
                        </button>
                    </div>
                </div>
        </form>
    </div>
</div>

</body>
<script src="~/js/quagga.min.js"></script>
<script src="~/js/especialista.js"></script>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
