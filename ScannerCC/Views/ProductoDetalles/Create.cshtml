@model ScannerCC.Models.ProductoDetalles

@{
    Layout = null;
}

<style>
    .container {
        position: relative;
        z-index: 1; /* Asegura que el contenido esté por encima de las imágenes de fondo */
        max-width: 500px; /* Ajusta el ancho máximo que desees */
        margin: auto; /* Centra el contenedor en la pantalla */
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-groupp {
        display: flex;
        justify-content: flex-end;
        width: 100%;
    }


    label {
        color: #4B0404; /* Cambia este valor por el color que desees */
        font-family: Arial;
        border: none;
        padding: 5px;
    }

    input {
        color: black; /* Color del texto */
        background-color: #DBD7D7; /* Color de fondo */
        padding: 5px; /* Espaciado interno */
        border-radius: 5px; /* Bordes redondeados (opcional) */
        font-family: Arial;
        font-size: 12px;
        border: none;
    }

    select {
        color: black; /* Color del texto */
        background-color: #DBD7D7; /* Color de fondo */
        padding: 5px; /* Espaciado interno */
        border-radius: 5px; /* Bordes redondeados (opcional) */
        font-family: Arial;
        border: none;
    }

    button {
        color: black; /* Color del texto */
        padding: 5px; /* Espaciado interno */
        border-radius: 5px; /* Bordes redondeados (opcional) */
        font-family: Arial;
        border: none;
    }

    input, select {
        width: 100%;
        margin: 5px;
    }

    button[type="submit"] {
        background-color: #BF6565;
        color: white;
        width: 100%; /* Se asegura que el botón sea del mismo ancho que los inputs */
        max-width: 220px;
    }

        button[type="submit"]:hover {
            background-color: #F25757;
            color: white;
            width: 100%; /* Se asegura que el botón sea del mismo ancho que los inputs */
            max-width: 220px;
        }

    a {
        color: white;
    }

        a:hover {
            color: #62EBF0;
        }

    .titulos {
        font-family: Arial;
        font-size: 10px;
        padding-left: 5px;
    }

    .form-check-input[type="radio"] {
        display: none;
    }

    .radio-circle {
        display: inline-block;
        width: 15px; 
        height: 15px;
        border: 5px solid #260202; 
        border-radius: 50%;
        margin-right: 8px;
        cursor: pointer;
        transition: background-color 0.3s, border-color 0.3s;
    }

    .form-check-input[type="radio"]:checked + .radio-circle {
        background-color: #ff6666;
        border-color: #260202;
    }

    .option-text {
        color: #260202;
        font-size: 16px;
        font-weight: 500;
        margin-right: 10px;
    }

    .form-check {
        margin-right: 20px;
    }

    .form-grouppp {
        display: flex;
        align-items: center; /* Alinea verticalmente los elementos al centro */
        font-family: Arial, sans-serif;
        margin-bottom: 15px;
        font-size: 16px;
        color: #260202;
    }

    .med {
        margin-right: 15px; /* Ajusta el espacio entre el label y los radio buttons */
    }
</style>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Extras/favicon.png" type="image/x-icon">
    <title>QS - Registar nuevo detalle producto</title>
    <link rel="stylesheet" href="~/css/Nav.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="nav-i">
            <a href="@Url.Action("RedirigirSegunRol", "Home")">
                <img class="logoqs" src="~/Extras/QualityScoutLogo.png" alt="Logo de Quality Scout">
            </a>
            <div class="navstyle">
                <div class="iconosnav">
                    <a asp-action="Index" asp-controller="Especialista">
                        <img src="~/Extras/home.png" alt="Inicio" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionUsuarios" asp-controller="Usuario">
                        <img src="~/Extras/usuarios.png" alt="Usuarios" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="Controles" asp-controller="Controles">
                        <img src="~/Extras/controles.png" alt="Controles" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionProductos" asp-controller="Producto">
                        <img src="~/Extras/productos.png" alt="Productos" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionInformes" asp-controller="Informes">
                        <img src="~/Extras/Informes.png" alt="Informes" />
                    </a>
                </div>
                <div class="iconosnav">
                    <a asp-action="GestionEscaneos" asp-controller="Escaneos">
                        <img src="~/Extras/escaner.png" alt="Informes" />
                    </a>
                </div>
            </div>
            <div class="login-btn">
                <div class="div2">
                    <img class="icono-lapiz" src="~/Extras/especialista.png" alt="Especialista">
                    <div class="welcome-container">
                        <span class="welcome-text">Bienvenido!</span>
                        <p style="font-size:12px;">@GetFirstNameAndSurnameB(ViewBag.trab.Nombre)</p>

                        @functions {
                            public string GetFirstNameAndSurnameB(string fullName)
                            {
                                if (string.IsNullOrEmpty(fullName))
                                {
                                    return string.Empty;
                                }

                                var nameParts = fullName.Split(' ');

                                if (nameParts.Length >= 2)
                                {
                                    return nameParts[0] + " " + nameParts[2];
                                }

                                return nameParts[0];
                            }
                        }
                        <p style="font-size:12px;">Especialista</p>
                    </div>
                </div>
                <button id="showOptionUser" onclick="showOptionUser()">
                    <i class="fa-solid fa-caret-down"></i>
                </button>
                <div id="opcionesUser" style="display: none">
                    <ul>
                        <li>
                            <a style="color:white;" asp-action="Details" asp-controller="Usuario" asp-route-id="@ViewBag.trab.Id">
                                Editar usuario
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Auth" asp-action="LogOut" class="dropdown-item" style="color:red; text-decoration:none;">
                                Cerrar sesión
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="content">
        <div class="content">
            <h2 class="accesotitulo">Añadir detalles del producto</h2>
        </div>
    </div>
    <div class="container">
<div class="row justify-content-center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                    <div class="form-group">
                        <label asp-for="IdProductos" class="control-label">Producto</label>
                        <select asp-for="IdProductos" class="form-control" asp-items="ViewBag.IdProductos" required>
                            <option value="">Seleccione un producto</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdBotellaDetalles" class="control-label">Botella</label>
                        <select asp-for="IdBotellaDetalles" class="form-control" asp-items="ViewBag.IdBotellaDetalles" required>
                            <option value="">Seleccione una botella</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ColorBotella">Color de botella</label>
                        <select asp-for="ColorBotella" name="ColorBotella" id="ColorBotella" class="form-control" required>
                            <option value="">Seleccione un color de botella</option>
                            <option value="Ámbar">Ámbar</option>
                            <option value="Blanco">Blanco</option>
                            <option value="Verde">Verde</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Capacidad" class="control-label">Capacidad (ml)</label>
                        <input asp-for="Capacidad" class="form-control" required />
                        <span asp-validation-for="Capacidad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TipoCapsula">Tipo de cápsula</label>
                        <select asp-for="TipoCapsula" name="TipoCapsula" id="TipoCapsula" class="form-control" required>
                            <option value="">Seleccione un tipo de cápsula</option>
                            <option value="Alutín">Alutín</option>
                            <option value="Complex">Complex</option>
                            <option value="PVC">PVC</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ColorCapsula">Color de cápsula</label>
                        <select asp-for="ColorCapsula" name="ColorCapsula" id="ColorCapsula" class="form-control" required>
                            <option value="">Seleccione un color de cápsula</option>
                            <option value="Azul">Azul</option>
                            <option value="Blanco">Blanco</option>
                            <option value="Dorado">Dorado</option>
                            <option value="Marrón">Marrón</option>
                            <option value="Negro">Negro</option>
                            <option value="Plata">Plata</option>
                            <option value="Rojo">Rojo</option>
                            <option value="Verde">Verde</option>
                            <option value="Violeta">Violeta</option>
                        </select>
                    </div>
                    <div class="form-grouppp d-flex justify-content-center align-items-center">
                        <label class="med me-3 mb-0">Medalla</label>
                        <div class="form-check form-check-inline align-items-center" style="margin-right: 20px;">
                            <input class="form-check-input" type="radio" asp-for="Medalla" name="Medalla" value="true" id="medallaSi" required />
                            <label class="form-check-label radio-circle" for="medallaSi"></label>
                            <span class="option-text">Sí</span>
                        </div>
                        <div class="form-check form-check-inline align-items-center">
                            <input class="form-check-input" type="radio" asp-for="Medalla" name="Medalla" value="false" id="medallaNo" required />
                            <label class="form-check-label radio-circle" for="medallaNo"></label>
                            <span class="option-text">No</span>
                        </div>
                        <span asp-validation-for="Medalla" class="text-danger ms-3"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TipoEtiqueta">Tipo de etiqueta</label>
                        <select asp-for="TipoEtiqueta" name="TipoEtiqueta" id="TipoEtiqueta" class="form-control" required>
                            <option value="">Seleccione un tipo de etiqueta</option>
                            <option value="Autoadhesiva">Autoadhesiva</option>
                            <option value="Engomada">Engomada</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="TipoCorcho">Tipo de corcho</label>
                        <select asp-for="TipoCorcho" name="TipoCorcho" id="TipoCorcho" class="form-control" required>
                            <option value="">Seleccione un tipo de corcho</option>
                            <option value="Microaglomerado">Microaglomerado</option>
                            <option value="Natural">Natural</option>
                            <option value="Perfect">Perfect</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MedidaEtiquetaABoquete" class="control-label">Medida de etiqueta a boquete (cm)</label>
                        <input asp-for="MedidaEtiquetaABoquete" class="form-control" required />
                        <span asp-validation-for="MedidaEtiquetaABoquete" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MedidaEtiquetaABase" class="control-label">Medida de etiqueta a base (cm)</label>
                        <input asp-for="MedidaEtiquetaABase" class="form-control" required />
                        <span asp-validation-for="MedidaEtiquetaABase" class="text-danger"></span>
                    </div>
                    <div class="form-groupp">
                        <button type="submit" class="btnAccionForm" style="margin-bottom: 50px;">
                            <i class="fa-solid fa-wine-bottle"></i> Agregar detalles del producto
                        </button>
                    </div>
                </div>
        </form>
    </div>
</div>

</body>
<script src="~/js/quagga.min.js"></script>
<script src="~/js/especialista.js"></script>

</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
