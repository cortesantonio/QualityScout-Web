@model ScannerCC.Models.ProductoDetalles

@{
    ViewData["Title"] = "Delete";
}
<style>
    body {
        background-color: #242424;
        color: white;
    }

    .container {
        text-align: center;
    }

    h4 {
        margin-top: 20px;
    }

    input {
        width: 30%;
        margin: 10px;
    }

        input[type="submit"] {
            background-color: red;
            color: white;
            margin-bottom: 15px;
        }

    .btn-danger:hover {
        background-color: darkred;
        border-color: red;
    }

    a {
        color: white;
    }

    a:hover {
        color: #62EBF0;
    }

    .row dt,
    .row dd {
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar esto?</h3>
<div>
    <h4>Producto detalles</h4>
    <hr />
    <dl class="row justify-content-center">
        <div class="col-sm-4">
            <div class="row justify-content-center">
                <dt class="col-sm-6">
                    Capacidad
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Capacidad)
                </dd>
                <dt class="col-sm-6">
                    Tipo de capsula
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.TipoCapsula)
                </dd>
                <dt class="col-sm-6">
                    Tipo de etiqueta
                </dt> 
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.TipoEtiqueta)
                </dd> 
                <dt class="col-sm-6">
                    Medalla
                </dt>
                <dd class="col-sm-6">
                    @if (Model.Medalla)
                    {
                        <span>Sí</span>
                    }
                    else
                    {
                        <span>No</span>
                    }
                </dd>
                <dt class="col-sm-6">
                    ColorCapsula
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.ColorCapsula)
                </dd>
                <dt class="col-sm-6">
                    Tipo de corcho
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.TipoCorcho)
                </dd>
                <dt class="col-sm-6">
                    Medida de etiqueta a boquete
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.MedidaEtiquetaABoquete)
                </dd>
                <dt class="col-sm-6">
                    Medida de etiqueta a base
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.MedidaEtiquetaABase)
                </dd>
            </div>
        </div>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
    </form>
</div>
<div>
    <a asp-action="Index" asp-controller="Home">Volver a la lista</a>
</div>